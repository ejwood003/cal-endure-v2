<%- include('partials/header', {pageTitle: 'Contacts - Cal-Endure to the End'}) %>
<body class="app-page">
    <%- include('partials/app-navbar', {currentPage: 'contacts'}) %>

    <!-- Main Content -->
    <main class="app-main">
        <div class="app-container">
            <!-- Page Header -->
            <header class="page-header">
                <div>
                    <h1 class="page-title">Contacts</h1>
                    <p class="page-subtitle">Manage your network and relationships</p>
                </div>
                <div class="header-actions">
                    <button class="btn-primary" onclick="openAddContactModal()">
                        <span>+ Add Contact</span>
                    </button>
                </div>
            </header>

            <!-- Search and Filter -->
            <div class="search-bar-container">
                <div class="search-bar">
                    <span class="search-icon">üîç</span>
                    <input type="text" id="contact-search" placeholder="Search contacts by name, email, or phone..."
                           onkeyup="searchContacts()">
                </div>
                <div class="filter-buttons">
                    <button class="filter-btn active" onclick="filterContacts('all', this)">All</button>
                    <button class="filter-btn" onclick="filterContacts('recent', this)">Recent</button>
                    <button class="filter-btn" onclick="filterContacts('favorites', this)">Favorites</button>
                </div>
            </div>

            <!-- Contacts Stats -->
            <div class="contact-stats">
                <div class="stat-item">
                    <span class="stat-number"><%= typeof contacts !== 'undefined' ? contacts.length : 0 %></span>
                    <span class="stat-label">Total Contacts</span>
                </div>
                <div class="stat-item">
                    <span class="stat-number" id="favorites-count"><%= typeof contacts !== 'undefined' ? contacts.filter(c => c.is_favorite).length : 0 %></span>
                    <span class="stat-label">Favorites</span>
                </div>
            </div>

            <!-- Contacts Grid -->
            <div class="contacts-grid" id="contacts-grid">
                <% if (typeof contacts !== 'undefined' && contacts.length > 0) { %>
                    <% contacts.forEach(function(contact, index) { %>
                        <div class="contact-card"
                             data-contact-id="<%= contact.contact_id %>"
                             data-favorite="<%= contact.is_favorite %>"
                             data-order="<%= index %>">
                            <div class="contact-card-header">
                                <img src="<%= contact.photo || 'https://via.placeholder.com/100' %>" alt="<%= contact.first_name %> <%= contact.last_name %>" class="contact-photo">
                                <button class="favorite-btn" onclick="toggleFavorite('<%= contact.contact_id %>', this)">
                                    <%= contact.is_favorite ? '‚≠ê' : '‚òÜ' %>
                                </button>
                            </div>
                            <div class="contact-card-body">
                                <h3 class="contact-name"><%= contact.first_name %> <%= contact.last_name %></h3>
                                <div class="contact-info">
                                    <% if (contact.phone) { %>
                                        <div class="contact-info-item">
                                            <span class="info-icon">üì±</span>
                                            <span><%= contact.phone %></span>
                                        </div>
                                    <% } %>
                                    <% if (contact.email) { %>
                                        <div class="contact-info-item">
                                            <span class="info-icon">‚úâÔ∏è</span>
                                            <span><%= contact.email %></span>
                                        </div>
                                    <% } %>
                                    <% if (contact.city && contact.state) { %>
                                        <div class="contact-info-item">
                                            <span class="info-icon">üìç</span>
                                            <span><%= contact.city %>, <%= contact.state %></span>
                                        </div>
                                    <% } %>
                                </div>
                                <div class="contact-stats-mini">
                                    <span class="mini-stat"><%= contact.event_count || 0 %> events together</span>
                                </div>
                            </div>
                            <div class="contact-card-actions">
                                <button class="btn-card" onclick="viewContact('<%= contact.contact_id %>')">View</button>
                                <form action="/contacts/delete/<%= contact.contact_id %>" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure? This will remove the contact from all events.')">
                                    <button type="submit" class="btn-card-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="empty-state-card" style="grid-column: 1 / -1; text-align: center; padding: 40px;">
                        <div class="empty-state-icon">üë•</div>
                        <p class="empty-state-text">No contacts yet. Start by adding your first contact.</p>
                        <button class="btn-empty-state" onclick="openAddContactModal()">
                            <span>+ Create your first contact</span>
                        </button>
                    </div>
                <% } %>
            </div>
        </div>
    </main>

    <!-- Add/Edit Contact Modal -->
    <div id="contact-modal" class="modal">
        <div class="modal-content modal-large">
            <div class="modal-header">
                <h2 id="contact-modal-title">Add New Contact</h2>
                <button class="modal-close" onclick="closeContactModal()">&times;</button>
            </div>
            <form id="contact-form" class="modal-form" action="/contacts/create" method="POST" enctype="multipart/form-data">
                <div class="form-group photo-upload-group">
                    <label>Profile Photo</label>
                    <div class="photo-upload">
                        <img id="photo-preview" src="https://via.placeholder.com/150" alt="Preview" class="photo-preview">
                        <div class="photo-upload-btn">
                            <input type="file" id="contact-photo" name="photo" accept="image/*" onchange="previewPhoto(event)">
                            <label for="contact-photo" class="btn-outline">Choose Photo</label>
                        </div>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="contact-firstname">First Name *</label>
                        <input type="text" id="contact-firstname" name="firstName" placeholder="John" required>
                    </div>
                    <div class="form-group">
                        <label for="contact-lastname">Last Name *</label>
                        <input type="text" id="contact-lastname" name="lastName" placeholder="Smith" required>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="contact-phone">Phone Number</label>
                        <input type="tel" id="contact-phone" name="phone" placeholder="(555) 123-4567">
                    </div>
                    <div class="form-group">
                        <label for="contact-email">Email Address</label>
                        <input type="email" id="contact-email" name="email" placeholder="john.smith@email.com">
                    </div>
                </div>

                <div class="form-group">
                    <label for="contact-address">Street Address</label>
                    <input type="text" id="contact-address" name="streetAddress" placeholder="123 Main Street">
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="contact-city">City</label>
                        <input type="text" id="contact-city" name="city" placeholder="Provo">
                    </div>
                    <div class="form-group">
                        <label for="contact-state">State</label>
                        <input type="text" id="contact-state" name="state" placeholder="UT" maxlength="2">
                    </div>
                    <div class="form-group">
                        <label for="contact-zip">Zip Code</label>
                        <input type="text" id="contact-zip" name="zipCode" placeholder="84601" maxlength="10">
                    </div>
                </div>

                <div class="form-group">
                    <label for="contact-notes">Notes (Optional)</label>
                    <textarea id="contact-notes" name="notes" rows="3" placeholder="Add any notes about this contact..."></textarea>
                </div>

                <div class="modal-actions">
                    <button type="button" class="btn-outline" onclick="closeContactModal()">Cancel</button>
                    <button type="submit" class="btn-primary">Save Contact</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        const placeholderPhoto = 'https://via.placeholder.com/150';
        const contactModal = document.getElementById('contact-modal');
        const contactForm = document.getElementById('contact-form');
        let currentFilter = 'all';

        function applyContactFilters() {
            const searchTerm = document.getElementById('contact-search').value.toLowerCase();
            document.querySelectorAll('.contact-card[data-contact-id]').forEach(card => {
                const isFavorite = card.dataset.favorite === 'true';
                const order = parseInt(card.dataset.order || '0', 10);

                let matchesFilter = true;
                if (currentFilter === 'favorites') {
                    matchesFilter = isFavorite;
                } else if (currentFilter === 'recent') {
                    matchesFilter = order < 10;
                }

                const nameText = card.querySelector('.contact-name')?.textContent || '';
                const infoText = Array.from(card.querySelectorAll('.contact-info-item span:last-child'))
                    .map(el => el.textContent)
                    .join(' ');
                const matchesSearch = `${nameText} ${infoText}`.toLowerCase().includes(searchTerm);

                card.style.display = matchesFilter && matchesSearch ? 'block' : 'none';
            });
        }

        function searchContacts() {
            applyContactFilters();
        }

        function filterContacts(filter, buttonEl) {
            currentFilter = filter;
            document.querySelectorAll('.filter-btn').forEach(btn => btn.classList.remove('active'));
            if (buttonEl) {
                buttonEl.classList.add('active');
            }
            applyContactFilters();
        }

        async function toggleFavorite(contactId, buttonEl) {
            try {
                const response = await fetch(`/contacts/favorite/${contactId}`, {
                    method: 'POST'
                });

                if (response.ok) {
                    const card = document.querySelector(`.contact-card[data-contact-id=\"${contactId}\"]`);
                    if (card) {
                        const newValue = card.dataset.favorite !== 'true';
                        card.dataset.favorite = newValue ? 'true' : 'false';
                        if (buttonEl) {
                            buttonEl.textContent = newValue ? '‚≠ê' : '‚òÜ';
                        }
                    }
                    updateFavoriteCount();
                    applyContactFilters();
                } else {
                    alert('Error updating favorite status');
                }
            } catch (error) {
                console.error('Error toggling favorite:', error);
                alert('Error updating favorite status');
            }
        }

        function updateFavoriteCount() {
            const favorites = document.querySelectorAll('.contact-card[data-favorite=\"true\"]').length;
            const favoritesDisplay = document.getElementById('favorites-count');
            if (favoritesDisplay) {
                favoritesDisplay.textContent = favorites;
            }
        }

        async function viewContact(contactId) {
            try {
                const response = await fetch(`/contacts/${contactId}`);
                if (!response.ok) {
                    throw new Error('Not found');
                }
                const data = await response.json();
                if (data.contact) {
                    populateContactForm(data.contact);
                    contactForm.action = `/contacts/update/${contactId}`;
                    document.getElementById('contact-modal-title').textContent = 'View / Edit Contact';
                    contactModal.style.display = 'flex';
                }
            } catch (error) {
                console.error('View contact error:', error);
                alert('Unable to load contact details right now.');
            }
        }

        function populateContactForm(contact) {
            document.getElementById('contact-firstname').value = contact.first_name || '';
            document.getElementById('contact-lastname').value = contact.last_name || '';
            document.getElementById('contact-phone').value = contact.phone || '';
            document.getElementById('contact-email').value = contact.email || '';
            document.getElementById('contact-address').value = contact.street_address || '';
            document.getElementById('contact-city').value = contact.city || '';
            document.getElementById('contact-state').value = contact.state || '';
            document.getElementById('contact-zip').value = contact.zip_code || '';
            document.getElementById('contact-notes').value = contact.notes || '';
            document.getElementById('photo-preview').src = contact.photo || placeholderPhoto;
            document.getElementById('contact-photo').value = '';
        }

        function openAddContactModal() {
            contactForm.reset();
            contactForm.action = '/contacts/create';
            document.getElementById('contact-modal-title').textContent = 'Add New Contact';
            document.getElementById('photo-preview').src = placeholderPhoto;
            contactModal.style.display = 'flex';
        }

        function closeContactModal() {
            contactModal.style.display = 'none';
            contactForm.reset();
            contactForm.action = '/contacts/create';
            document.getElementById('photo-preview').src = placeholderPhoto;
        }

        function previewPhoto(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('photo-preview').src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        }

        window.onclick = function(event) {
            if (event.target === contactModal) {
                closeContactModal();
            }
        }

        // User dropdown toggle
        document.querySelector('.user-menu').addEventListener('click', function(e) {
            this.querySelector('.user-dropdown').classList.toggle('show');
        });

        document.addEventListener('click', function(e) {
            if (!e.target.closest('.user-menu')) {
                document.querySelectorAll('.user-dropdown').forEach(dropdown => {
                    dropdown.classList.remove('show');
                });
            }
        });

        // Add fadeOut animation
        const style = document.createElement('style');
        style.textContent = `
            @keyframes fadeOut {
                from { opacity: 1; transform: scale(1); }
                to { opacity: 0; transform: scale(0.9); }
            }
        `;
        document.head.appendChild(style);

        document.addEventListener('DOMContentLoaded', () => {
            applyContactFilters();
            updateFavoriteCount();
        });
    </script>

    <%- include('partials/profile-modal') %>
</body>
</html>

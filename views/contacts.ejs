        // Toggle favorite
        async function toggleFavorite(contactId) {
            try {
                const response = await fetch(`/contacts/favorite/${contactId}`, {
                    method: 'POST'
                });

                if (response.ok) {
                    const btn = event.target;
                    btn.textContent = btn.textContent === '‚≠ê' ? '‚òÜ' : '‚≠ê';
                }
            } catch (error) {
                console.error('Error toggling favorite:', error);
            }
        }

